- if notice
  %p#notice= notice

%h2 Your Cart
%table
  - @cart.line_items.each do |item|
    %tr
      %td
        = item.quantity
        \&times
      %td= item.product.title
      %td
        = button_to '&times;'.html_safe, item, method: :delete, class: 'remove_item', data: {confirm: 'Are you sure?'}
      %td.item_price= number_to_currency(item.price)

  %tr.total_line
    %td{colspan: 3} Total
    %td.total_cell= number_to_currency(@cart.total_price)

= button_to 'Empty cart', @cart, method: :delete, data: {confirm: 'Are you sure?' }
