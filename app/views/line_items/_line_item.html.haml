%tr{id: (line_item == @current_item ? 'current_item': '')}
  %td
    = line_item.quantity
    \&times
  %td= line_item.product.title
  %td
    = button_to '&times;'.html_safe, line_item, method: :delete, remote: true,  class: 'remove_item', data: {confirm: 'Are you sure?'}
  %td.item_price= number_to_currency(line_item.total_price)
